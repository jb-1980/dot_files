{
  // STOP vs code following all links and freezing up computer
  "search.followSymlinks": false,
  "editor.fontLigatures": true,
  "workbench.iconTheme": "vscode-icons",
  "explorer.confirmDragAndDrop": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.lineNumbers": "on",

  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.cursorStylePerMode.visual": "block-outline",
  "vim.cursorStylePerMode.visualblock": "block-outline",
  "vim.cursorStylePerMode.visualline": "block-outline",
  "vim.vimrc.enable": false,
  "vim.vimrc.path": "",
  "vim.surround": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>", ":", "w", "<Enter>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //   "before": ["d", "d"],
    //   "after": ["\"", "_", "d", "d"]
    // },
    {
      "before": ["<leader>", "v"],
      "after": [],
      "commands": [{ "command": "workbench.action.splitEditor" }]
    },
    {
      "before": ["<leader>", "h"],
      "after": [],
      "commands": [{ "command": "workbench.action.splitEditorOrthogonal" }]
    },
    {
      "before": ["<leader>", "."],
      "after": ["@", "@"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["ctrl+n"],
      "after": [":", "n", "o", "h", "l", "<Enter>"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["u"],
      "after": [],
      "commands": [{ "command": "undo" }]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [{ "command": "redo" }]
    },
    {
      "before": ["0"],
      "after": ["^"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["0"],
      "after": ["^"]
    },
    {
      "before": ["$"],
      "after": ["$", "<Left>"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.format.insertSpaceAfterConstructor": true,
  "gitlens.statusBar.reduceFlicker": true,
  "workbench.activityBar.visible": true,
  "editor.minimap.enabled": false,
  "json.maxItemsComputed": 10000,
  "editor.formatOnSave": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.semi": false,

  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "search.showLineNumbers": true,
  "vim.smartRelativeLine": true,
  "editor.fontFamily": "Fira Code",
  "bookmarks.useWorkaroundForFormatters": true,
  "[ruby]": {
    "editor.defaultFormatter": "jnbt.vscode-rufo",
    "editor.formatOnSave": true
  },
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.lint": {
    "rubocop": {
      "useBundler": true // enable rubocop via bundler
    },
    "reek": {
      "useBundler": true // enable reek via bundler
    }
  },
  "files.exclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/.meteor/local/**": true,
    "dist/**": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,

  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    "DEBUG:",
    "REVIEW:",
    "FIXME:",
    {
      "text": "NOTE:",
      "color": "#ff0000",
      "backgroundColor": "yellow"
    },
    {
      "text": "HACK:",
      "color": "white"
    },
    {
      "text": "TODO:",
      "color": "white",
      "border": "none",
      "borderRadius": "2px",
      "backgroundColor": "rgba(72,248,115,.4)",
      "isWholeLine": false,
      "overviewRulerColor": "rgba(72,248,115,.8)"
    },
    {
      "text": "console.log",
      "color": "rgb(167, 33, 0)",
      "border": "2px solid #f7d2da",
      "borderRadius": "2px",
      "backgroundColor": "#f7d2da",
      // "isWholeLine": true
      "overviewRulerColor": "#f7d2da"
    }
  ],
  "todohighlight.defaultStyle": {
    "color": "red",
    "backgroundColor": "rgba(0,0,0,.2)",
    "overviewRulerColor": "rgba(0,0,0,0)",
    "border": "1px solid #666",
    "borderRadius": "2px",
    "isWholeLine": false
    //other styling properties goes here ...
  },
  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.css",
    "**/*.scss"
  ],
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.meteor/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**"
  ],
  "todohighlight.maxFilesForSearch": 5120,
  "todohighlight.toggleURI": false,
  "color-highlight.markRuler": false,
  "color-highlight.markerType": "underline",
  "color-highlight.matchWords": true,
  "react-native-tools.networkInspector.consoleLogsColorTheme": "Dark",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "Dart-Code.dart-code"
  },
  "explorer.confirmDelete": false,
  "workbench.colorCustomizations": {
    // "vim.cursor": "rgb(255, 255, 255)",
    // "vim.cursorStylePerMode.normal": "block",
    // "editorCursor.foreground": "#ffff00",
    // "terminalCursor.foreground": "#ffff00",

    "terminal.ansiGreen": "#73daca",
    "editor.lineHighlightBackground": "#1073cf4d",
    "editor.lineHighlightBorder": "#9fced11f",
    "editorLineNumber.foreground": "#bbb",
    "editorLineNumber.activeForeground": "#fff",
    "editor.findMatchBackground": "#43c5da7e", //Current SEARCH MATCH
    "editor.findMatchHighlightBackground": "#ff990075", //Other SEARCH MATCHES
    "editor.selectionBackground": "#135564",
    "editor.selectionHighlightBackground": "#135564",
    "sideBar.background": "#000",
    "sideBar.foreground": "#fffFFFd2",
    "sideBar.dropBackground": "#fcfacb01",
    "list.inactiveSelectionBackground": "#ffffff62", // Search Selection inactive
    "tab.activeBorder": "#fff",
    "tab.activeBackground": "#000"
  },
  "diffEditor.wordWrap": "off",
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,
  "editor.inlayHints.enabled": "off",
  "autoimport.doubleQuotes": true,
  "search.exclude": {
    "**/node_modules/**": true,
    "node_modules/**": true
  },
  "editor.inlineSuggest.enabled": true,
  "javascript.suggest.enabled": false,
  "typescript.suggest.enabled": false,
  "editor.accessibilitySupport": "off",
  "window.zoomLevel": 2,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools"
  },
  "sql-formatter.uppercase": true,
  "sql-formatter.dialect": "mysql",
  "markdown-preview-enhanced.enableEmojiSyntax": false,
  "typescript.suggest.includeCompletionsWithSnippetText": false,
  "autoimport.autoComplete": false,
  "Prettier-SQL.denseOperators": true,
  "Prettier-SQL.ignoreTabSettings": false
}
